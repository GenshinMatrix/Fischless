<ui:Page x:Class="Fischless.Views.PageHome"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
         xmlns:sys="clr-namespace:System;assembly=mscorlib"
         xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
         xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
         xmlns:ui="http://schemas.modernwpf.com/2019"
         xmlns:local="clr-namespace:Fischless.Views"
         xmlns:vm="clr-namespace:Fischless.ViewModels"
         xmlns:controls="clr-namespace:Fischless.Designs.Controls;assembly=Fischless.Designs"
         xmlns:animations="clr-namespace:Fischless.Designs.Animations;assembly=Fischless.Designs"
         mc:Ignorable="d"
         FontSize="14"
         d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="0,0,0,0">
            <Image Width="418" Opacity="0.3" Source="/Assets/Images/UI_SummerTime_ImgDecorate_01.png"/>
        </Grid>
        <Grid HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,-2,5,0">
            <Image Width="84" Opacity="0.3" Source="/Assets/Images/UI_Icon_GcgBossChallenges_Difficulty.png"/>
        </Grid>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" Margin="6,3,3,0">
                <StackPanel Orientation="Horizontal">
                    <Button Command="{Binding AddContactCommand}"
                        BorderBrush="Transparent">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <ui:FontIcon Glyph="{x:Bind controls:FontSymbols.AddFriend}" FontSize="18"/>
                                <TextBlock Text="添加" Margin="5,0,0,0"/>
                            </StackPanel>
                        </Button.Content>
                    </Button>
                    <Button Command="{Binding RefreshCommand}"
                        BorderBrush="Transparent"
                        Margin="5,0,0,0">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <ui:FontIcon Glyph="{x:Bind controls:FontSymbols.Refresh}" FontSize="18"/>
                                <TextBlock Text="刷新" Margin="5,0,0,0"/>
                            </StackPanel>
                        </Button.Content>
                    </Button>
                </StackPanel>
            </Grid>

            <controls:SmoothScrollViewer Grid.Row="1"
                                     Margin="6,3,6,3"
                                     VerticalScrollBarVisibility="Visible"
                                     PanningMode="None">
                <ListView ScrollViewer.VerticalScrollBarVisibility="Visible"
                      ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                      ScrollViewer.CanContentScroll="False"
                      VirtualizingPanel.IsVirtualizing="False">
                    <i:Interaction.Behaviors>
                        <controls:ListViewMouseWheelBubblingBehavior />
                    </i:Interaction.Behaviors>
                    <ListView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel VerticalAlignment="Top">
                                <i:Interaction.Behaviors>
                                    <animations:StackPanelChildrenTransitionsDownToUpBehavior />
                                </i:Interaction.Behaviors>
                            </StackPanel>
                        </ItemsPanelTemplate>
                    </ListView.ItemsPanel>
                    <ListView.ItemTemplate>
                        <DataTemplate DataType="vm:Contact">
                            <Grid Height="45">
                                <TextBlock Text="2asf" Margin="0" Foreground="#A0A0A0" FontSize="16"/>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                    <ListView.Items>
                        <sys:String>4s5ew</sys:String>
                        <sys:String>4s5ew</sys:String>
                        <sys:String>4s5ew</sys:String>
                        <sys:String>4s5ew</sys:String>
                        <sys:String>4s5ew</sys:String>
                        <sys:String>4s5ew</sys:String>
                        <sys:String>4s5ew</sys:String>
                        <sys:String>4s5ew</sys:String>
                        <sys:String>4s5ew</sys:String>
                        <sys:String>4s5ew</sys:String>
                        <sys:String>4s5ew</sys:String>
                        <sys:String>4s5ew</sys:String>
                        <sys:String>4s5ew</sys:String>
                        <sys:String>4s5ew</sys:String>
                        <sys:String>4s5ew</sys:String>
                        <sys:String>4s5ew</sys:String>
                        <sys:String>4s5ew</sys:String>
                        <sys:String>4s5ew</sys:String>
                        <sys:String>4s5ew</sys:String>
                        <sys:String>4s5ew</sys:String>
                        <sys:String>4s5ew</sys:String>
                        <sys:String>4s5ew</sys:String>
                        <sys:String>4s5ew</sys:String>
                    </ListView.Items>
                </ListView>
            </controls:SmoothScrollViewer>
        </Grid>
    </Grid>
</ui:Page>
